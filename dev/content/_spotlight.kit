<section class="spotlight">
    <h1>Spotlight</h1>

    <div class="gallery">
        <div class="video"></div>
        <div class="gallery1"></div>
        <div class="gallery2"></div>
        <div class="gallery3"></div>
    </div>

    <button class="viewgallery">View our gallery</button>

    <div class="ptcspotlight">
        <div class="press">
            <div class="pressimg"></div>
            <div class="pressinfo">
                <p>
                    We see and appreciate all the mentions!
                </p>
                <button>View our press up to 2005</button>
            </div>
        </div>
    
        <div class="thanks">
            <div class="thanksimg"></div>
            <div class="thanksinfo">
                <p>
                    Thank you for all the love!
                </p>
                <button>See what people think of us</button>
            </div>
        </div>
    
        <div class="community">
            <div class="communityimg"></div>
            <div class="communityinfo">
                <p>
                    We take part in our community in any way we can!
                </p>
                <button>View our community contributions</button>
            </div>
        </div>
    </div>
</section>